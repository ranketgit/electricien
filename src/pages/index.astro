        </div>
    </section>

    <section class="py-16 md:py-24 bg-white">
        <div class="container mx-auto px-6">
            <div class="text-center mb-12 md:mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900">{testimonialsData.title}</h2>
            </div>
            <div class="grid md:grid-cols-3 gap-6 md:gap-8"> {/* Adjusted gap */}
                {testimonialsData.testimonials.map(testimonial => (
                    <div class="bg-gray-50 p-6 sm:p-8 rounded-2xl shadow-lg"> {/* Responsive padding */}
                        <p class="text-gray-600 italic mb-6 text-sm sm:text-base">{testimonial.quote}</p> {/* Responsive text */}
                        <p class="text-right font-semibold text-gray-700 text-sm sm:text-base">- {testimonial.author}</p> {/* Responsive text */}
