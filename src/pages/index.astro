            <div class="text-center mb-12 md:mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{whyChooseUsData.title}</h2>
            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8"> {/* Adjusted gap */}
                {whyChooseUsData.reasons.map(reason => (
                    <div class="bg-gray-50 p-6 rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300">
                        <h3 class="text-xl font-semibold text-blue-700 mb-3">{reason.title}</h3>
                        <p class="text-gray-600 text-sm leading-relaxed">{reason.text}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <section id="services" class="py-16 md:py-20 bg-white">
        <div class="container mx-auto px-6">
            <div class="text-center mb-12 md:mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{servicesData.mainTitle}</h2>
                <p class="text-lg text-gray-700 max-w-2xl mx-auto">{servicesData.introText}</p>
            </div>

            {servicesData.services.map((service, index) => (
                <section class={`py-10 md:py-16 overflow-hidden ${index > 0 ? 'border-t border-gray-200' : ''}`}>
                    <div class="container mx-auto px-4 sm:px-6"> {/* Adjusted inner container padding */}
                        <div class={`flex flex-wrap items-center -mx-4 ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
                            <div class="w-full md:w-1/2 px-4 mb-8 md:mb-0">
                                <h3 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-4">{service.title}</h3>
                                <p class="text-gray-700 mb-6 leading-relaxed">{service.description}</p>
                                {service.keyPoints && service.keyPoints.length > 0 && (
                                    <div class="mb-6">
                                        <h4 class="text-lg font-semibold text-gray-800 mb-2">Points clés:</h4>
                                        <ul class="list-disc list-inside text-gray-600 space-y-1 text-sm sm:text-base"> {/* Responsive text */}
                                            {service.keyPoints.map(point => <li>{point}</li>)}
                                        </ul>
                                    </div>
                                )}
                                <a href={`tel:${phoneNumberHref}`} 
                                   class="w-full sm:w-auto inline-block text-center px-6 py-3 sm:px-8 rounded-xl font-semibold shadow-md transition duration-300 ease-in-out border-2 border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white text-base sm:text-lg">
                                    {phoneNumberDisplay}
                                </a>
                            </div>
                            <div class="w-full md:w-1/2 px-4">
                                <img src={service.imageUrl} alt={service.imageAlt} class="rounded-2xl shadow-xl w-full h-auto object-cover" style="max-height: 400px; md:max-height: 450px;" loading="lazy"/> {/* Adjusted max-height */}
                            </div>
