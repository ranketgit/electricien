                <p class="text-lg text-gray-700 max-w-2xl mx-auto">{findElectricianData.text}</p>
            </div>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3 sm:gap-4 md:gap-6"> {/* Adjusted gap */}
                {locationsData.map(stateEntry => (
                    <a href={`/electricien-${stateEntry.slug}/`} class="block bg-gray-50 p-3 py-4 sm:p-4 sm:py-6 rounded-xl sm:rounded-2xl shadow-md hover:shadow-lg hover:bg-gray-200 transition-all duration-300 text-center">
                        <span class="font-medium text-xs sm:text-sm text-gray-800 hover:text-blue-600">{stateEntry.State}</span> {/* Responsive text */}
